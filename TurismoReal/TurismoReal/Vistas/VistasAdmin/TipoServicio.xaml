                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="#F3E5F5"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#F3E5F5"/>
