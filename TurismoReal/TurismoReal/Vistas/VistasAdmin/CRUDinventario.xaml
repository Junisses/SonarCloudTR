                    Content="Regresar"
                    Grid.Column="1"
                    Grid.Row="2"
                    Width="100"
                    Cursor="Hand"
                    Background="#751970"
                    Foreground="White"
                    Click="Regresar" Margin="42,0,43,0"/>
            <!--#endregion-->
            <!--#region CREAR-->
            <Button x:Name="BtnCrear"
                    Content="Crear"
                    Grid.Row="16"
                    Grid.Column="5"
                    Width="100"
                    Background="Green"
                    Foreground="White"
                    Style="{DynamicResource estiloCrear}"
                    Click="Crear" Margin="43,0,42,0"/>
            <!--#endregion-->

            <!--#region ACTUALIZAR-->
            <Button x:Name="BtnActualizar"
                    Content="Actualizar"
                    Grid.Row="16"
                    Grid.Column="1"
                    Width="100"
                    Background="Coral"
                    Foreground="White"
                    CommandParameter="{Binding idArtefactos}"
                    Style="{DynamicResource estiloEliminar}"
                    Click="Actualizar" 
                    Margin="43,0,42,0"/>
            <!--#endregion-->


            <!--#region Limpiar-->
            <Button x:Name="BtnLimpiar"
                    Content="Limpiar"
                    Grid.Row="16"
                    Grid.Column="2"
                    Width="100"
                    Background="#003399"
                    Foreground="White"
                    Style="{DynamicResource estiloACT}"
                    Click="Limpiar" 
                    Margin="43,0,42,0"/>
