                                        <Image Source="/Vistas/Images/ver.png"></Image>
                                    </Button>

                                    <Button Name="BtnModificar" 
                                                Width="20" 
                                                Height="20" 
                                                Click="ActualizarC"
                                                Cursor="Hand"
                                                Background="Transparent"
                                                BorderBrush="Transparent"
                                                CommandParameter="{Binding idInventario}">
                                        <Image Source="/Vistas/Images/edit.png"></Image>
                                    </Button>

                                    <Button Name="BtnEliminar" 
                                                Width="20" 
                                                Height="20" 
                                                Click="Eliminar"
                                                Cursor="Hand"
                                                Background="Transparent"
                                                BorderBrush="Transparent"
                                                CommandParameter="{Binding idInventario}">
                                        <Image Source="/Vistas/Images/eliminar.png"></Image>
                                    </Button>

                                </DockPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
