            <!--#endregion-->
            <!--#region CONTENIDO-->

            <TextBox Style="{DynamicResource TextBoxStyle}" 
                     Grid.Row="1"
                     Grid.Column="4"
                     x:Name="tbIDdepto"
                     Visibility="Hidden"/>

            <TextBlock Grid.Row="6"
                       Grid.Column="1"
                       Text="Cantidad"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"/>
            <TextBox Grid.Row="6"
                     Grid.Column="2"
                     x:Name="tbCantidad"
                     TabIndex="1"
                     HorizontalContentAlignment="Center"
                     Style="{DynamicResource TextBoxStyle}" 
                     Background="#F3E5F5"/>
