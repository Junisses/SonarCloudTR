                           Text="Ingrese cantidad (sólo números)" 
                           VerticalAlignment="Center" 
                           Grid.Column="2"
                           Grid.Row="6"
                           FontSize="11"
                           HorizontalAlignment="Center" Margin="5,0,0,3" 
                           Foreground="DarkGray">
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger 
                                    Binding="{Binding Text, ElementName=tbCantidad}" Value="">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
